<Window
    x:Class="Lab1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lab1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Title="MainWindow"
    Width="1490"
    Height="450"
    Keyboard.KeyDown="canvas_KeyDown"
    SizeChanged="Window_SizeChanged"
    ThemeMode="System"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <system:String x:Key="openString">Open File...</system:String>
        <system:String x:Key="fileString">File:</system:String>
        <system:String x:Key="debugString">Debug Info</system:String>

        <system:String x:Key="mode_move">Move</system:String>
        <system:String x:Key="mode_rotate">Rotate</system:String>
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel>
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Button
                    Margin="15,0,15,0"
                    HorizontalAlignment="Left"
                    Click="ButtonOpenFile_Click"
                    Content="{StaticResource openString}" />
                <Button
                    Height="28"
                    Click="OpenPopupButton_Click"
                    Content="Источники света" />
                <CheckBox
                    Name="fixLightCheckBox"
                    Margin="5,0,5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Fix light" />
                <TextBlock
                    x:Name="DebugPanel"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{StaticResource debugString}" />
                <TextBlock
                    x:Name="fileName"
                    VerticalAlignment="Center"
                    Text="{StaticResource fileString}" />
            </StackPanel>
            <StackPanel
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                Orientation="Horizontal" />
            <StackPanel
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <TextBlock
                    Margin="20,0,20,0"
                    VerticalAlignment="Center"
                    Text="Rendering mode:" />
                <RadioButton
                    VerticalAlignment="Center"
                    Checked="RadioButton_Checked"
                    Content="Shadows"
                    GroupName="RenderingMode" />
                <RadioButton
                    VerticalAlignment="Center"
                    Checked="RadioButton_Checked"
                    Content="Textured"
                    GroupName="RenderingMode" />
                <RadioButton
                    VerticalAlignment="Center"
                    Checked="RadioButton_Checked"
                    Content="Smooth"
                    GroupName="RenderingMode" />
                <RadioButton
                    VerticalAlignment="Center"
                    Checked="RadioButton_Checked"
                    Content="Deferred"
                    GroupName="RenderingMode" />
                <RadioButton
                    VerticalAlignment="Center"
                    Checked="RadioButton_Checked"
                    Content="Flat"
                    GroupName="RenderingMode"
                    IsChecked="True" />
                <RadioButton
                    Checked="RadioButton_Checked"
                    Content="Wireframe"
                    GroupName="RenderingMode" />
            </StackPanel>
        </DockPanel>
        <Border
            x:Name="canvas"
            Grid.Row="1"
            Margin="10,10,10,10"
            Background="Black"
            MouseDown="Window_MouseDown"
            MouseMove="Window_MouseMove"
            MouseUp="Window_MouseUp"
            PreviewMouseWheel="Window_MouseWheel" />
        <Popup
            Margin="100"
            IsOpen="{Binding IsPopupOpen, UpdateSourceTrigger=PropertyChanged}"
            Placement="Center"
            StaysOpen="False">
            <local:LightSourcesPopup DataContext="{Binding}" />
        </Popup>
    </Grid>

</Window>
